<h1>My orders</h1>

{{#if data.length}}
{{#each data}}
<div class="row">
  <div class="col s8 offset-s2">
    <div class="card">
      <div class="card-content">
        <p class="card-title">Order number: {{_id}}</p>
        <span>Date: </span><span class="date">{{date}}</span>
        <p>Buyer: {{user.name}} <span> ({{user.userId.email}})</span></p>
        <hr>
        <ol>
          {{#each data}}
          <li style="margin-top: 10px;">
            <div style="display: flex; align-items: center">
              {{item.title}} <span style="color: green; margin-left: 5px">(x{{count}})</span>
              <img src="{{item.img}}" alt="{{data.title}}" style="width: 70px; height: 70px; margin-left: 30%">
            </div>
          </li>
          {{/each}}
        </ol>
        <strong><i>Total price: </i></strong><span class="price">{{totalPrice}}</span>
      </div>
    </div>
  </div>
</div>
{{/each}}
{{else}}
<i>No orders yet</i>
{{/if}}
