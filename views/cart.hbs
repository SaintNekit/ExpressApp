<h1>My cart</h1>
<div id="cart">
  {{#if data.length}}
  <table>
    <thead>
      <tr>
        <td>Name</td>
        <td>Count</td>
        <td>Delete</td>
      </tr>
    </thead>
    <tbody>
      {{#each data}}
      <tr>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <td>
          <button class="btn btn-small js-remove" data-id="{{id}}" data-csrf="{{@root.csrf}}">Delete</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <div style="display: flex; justify-content: space-between; margin-top: 20px;">
    <strong><i>Total price: </i><span class="price">{{totalPrice}}</span></strong>
    <form action="/orders" method="POST">
      <input type="hidden" name="_csrf" value="{{csrf}}">
      <button type="submit" class="btn blue">Purchase</button>
    </form>
  </div>
</div>
{{else}}
<p>Cart is empty</p>
{{/if}}
